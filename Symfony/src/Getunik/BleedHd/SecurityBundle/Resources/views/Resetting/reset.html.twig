{% extends "GetunikBleedHdSecurityBundle::layout.html.twig" %}

{% trans_default_domain 'SecurityBundle' %}

{% block fos_user_content %}
<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" method="POST" class="fos_user_resetting_reset">
	<div class="form-group">
		<div class="controls">
			{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'form.new_password'|trans }}) }}
		</div>
	</div>
	<div class="form-group">
		<div class="controls">
			{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'form.new_password_confirmation'|trans }}) }}
		</div>
	</div>
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
    </div>
</form>
{% endblock fos_user_content %}
